// üéπ M√ìDULO TECLADO NATIVO - VERS√ÉO SIMPLES PARA CELULAR
console.log('‚úÖ Teclado Nativo - Iniciando...');

// Fun√ß√£o principal que cria tudo
function criarTecladoNativo(tipo) {
    console.log('üéπ Criando teclado para:', tipo);
    
    // 1. Criar bot√£o azul invis√≠vel
    const botaoAzul = document.createElement('button');
    botaoAzul.id = 'tecladoTrigger';
    botaoAzul.innerHTML = 'üéπ';
    botaoAzul.title = 'Abrir teclado nativo';
    
    // Estilos do bot√£o azul
    botaoAzul.style.cssText = `
        position: fixed;
        background-color: rgba(0, 150, 255, 0.3);
        border: 2px dashed #0096FF;
        cursor: pointer;
        z-index: 10000;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    `;
    
    // 2. Criar caixa de texto
    const caixaTexto = document.createElement('div');
    caixaTexto.id = 'caixaTexto';
    caixaTexto.innerHTML = `
        <button id="botaoFechar" style="position: absolute; top: 10px; right: 15px; background: none; border: none; font-size: 24px; cursor: pointer; color: #666;">√ó</button>
        <h3 style="margin: 0 0 15px 0;">Digite ou use microfone do teclado:</h3>
        <textarea id="areaTexto" placeholder="Digite aqui ou use o microfone do teclado..." style="flex: 1; border: 1px solid #ccc; border-radius: 10px; padding: 15px; font-size: 16px; resize: none; margin-bottom: 15px;"></textarea>
        <button id="botaoEnviar" style="background: #0096FF; color: white; border: none; padding: 15px; border-radius: 10px; font-size: 18px; cursor: pointer;">Enviar para Tradu√ß√£o</button>
    `;
    
    // Estilos da caixa de texto
    caixaTexto.style.cssText = `
        position: fixed;
        top: 20%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        max-width: 400px;
        height: 400px;
        background: white;
        border: 2px solid #0096FF;
        border-radius: 15px;
        padding: 20px;
        z-index: 10001;
        display: none;
        flex-direction: column;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    `;
    
    // Adicionar ao body
    document.body.appendChild(botaoAzul);
    document.body.appendChild(caixaTexto);
    
    // Posicionar bot√£o sobre o microfone
    function posicionarBotao() {
        const microfone = document.getElementById('recordButton');
        if (microfone) {
            const rect = microfone.getBoundingClientRect();
            botaoAzul.style.left = rect.left + 'px';
            botaoAzul.style.top = rect.top + 'px';
            botaoAzul.style.width = rect.width + 'px';
            botaoAzul.style.height = rect.height + 'px';
            console.log('‚úÖ Bot√£o posicionado sobre microfone');
        } else {
            console.log('‚è≥ Microfone n√£o encontrado, tentando novamente...');
            setTimeout(posicionarBotao, 500);
        }
    }
    
    // Fun√ß√£o para enviar texto
    async function enviarTexto(texto) {
        if (!texto) return;
        
        console.log('üìù Enviando texto:', texto);
        
        try {
            // Traduzir
            const response = await fetch('https://chat-tradutor-7umw.onrender.com/translate', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    text: texto,
                    targetLang: window.meuIdiomaRemoto || 'en'
                })
            });
            
            const result = await response.json();
            const traduzido = result.translatedText || texto;
            console.log('üåê Traduzido:', traduzido);
            
            // Enviar via WebRTC
            if (window.rtcCore && window.rtcCore.dataChannel) {
                window.rtcCore.dataChannel.send(traduzido);
                console.log('‚úÖ Enviado via WebRTC');
            }
        } catch (error) {
            console.error('‚ùå Erro:', error);
        }
    }
    
    // Configurar eventos
    botaoAzul.addEventListener('click', function() {
        console.log('üéπ Abrindo teclado...');
        caixaTexto.style.display = 'flex';
        document.getElementById('areaTexto').focus();
    });
    
    document.getElementById('botaoFechar').addEventListener('click', function() {
        caixaTexto.style.display = 'none';
        document.getElementById('areaTexto').value = '';
    });
    
    document.getElementById('botaoEnviar').addEventListener('click', function() {
        const texto = document.getElementById('areaTexto').value.trim();
        if (texto) {
            enviarTexto(texto);
            caixaTexto.style.display = 'none';
            document.getElementById('areaTexto').value = '';
        }
    });
    
    document.getElementById('areaTexto').addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            document.getElementById('botaoEnviar').click();
        }
    });
    
    // Inicializar
    setTimeout(posicionarBotao, 1000);
    window.addEventListener('resize', posicionarBotao);
    
    console.log('‚úÖ Teclado nativo criado com sucesso!');
}

// Inicializar automaticamente quando a p√°gina carregar
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
        criarTecladoNativo('receiver');
    });
} else {
    criarTecladoNativo('receiver');
}
