// üéπ M√ìDULO TEclADO NATIVO - REUTILIZ√ÅVEL PARA RECEIVER E CALLER
// üìÅ Salve como: core/teclado-nativo.js

class TecladoNativo {
    constructor(tipo = 'receiver') {
        this.tipo = tipo; // 'receiver' ou 'caller'
        this.configurado = false;
    }

    // üéØ CONFIGURAR TECLADO NATIVO
    configurar() {
        if (this.configurado) return;
        
        console.log(`üéπ Configurando teclado nativo para ${this.tipo}...`);
        
        // Criar elementos dinamicamente
        this.criarElementos();
        this.configurarEventos();
        this.configurado = true;
        
        console.log(`‚úÖ Teclado nativo configurado para ${this.tipo}`);
    }

    // üèóÔ∏è CRIAR ELEMENTOS DO TECLADO
    criarElementos() {
        // Criar bot√£o invis√≠vel se n√£o existir
        if (!document.getElementById('tecladoTrigger')) {
            const tecladoTrigger = document.createElement('button');
            tecladoTrigger.id = 'tecladoTrigger';
            tecladoTrigger.title = 'Abrir teclado nativo';
            tecladoTrigger.innerHTML = 'üéπ';
            document.body.appendChild(tecladoTrigger);
        }

        // Criar caixa de texto se n√£o existir
        if (!document.getElementById('caixaTexto')) {
            const caixaTexto = document.createElement('div');
            caixaTexto.id = 'caixaTexto';
            caixaTexto.innerHTML = `
                <button id="botaoFechar">√ó</button>
                <h3>Digite ou use microfone do teclado:</h3>
                <textarea id="areaTexto" placeholder="Digite aqui ou use o microfone do teclado..."></textarea>
                <button id="botaoEnviar">Enviar para Tradu√ß√£o</button>
            `;
            document.body.appendChild(caixaTexto);
        }

        // Aplicar estilos
        this.aplicarEstilos();
    }

    // üé® APLICAR ESTILOS
    aplicarEstilos() {
        const styles = `
            <style>
                /* üÜï ESTILO PARA O BOT√ÉO INVIS√çVEL */
                #tecladoTrigger {
                    position: absolute;
                    background-color: rgba(0, 150, 255, 0.3);
                    border: 2px dashed #0096FF;
                    cursor: pointer;
                    z-index: 10000;
                    border-radius: 50%;
                    transition: all 0.3s ease;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 20px;
                }
                
                #tecladoTrigger:hover {
                    background-color: rgba(0, 150, 255, 0.5);
                }

                /* üÜï CAIXA DE TEXTO CENTRALIZADA */
                #caixaTexto {
                    position: fixed;
                    top: 20%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    width: 80%;
                    max-width: 400px;
                    height: 400px;
                    background: white;
                    border: 2px solid #0096FF;
                    border-radius: 15px;
                    padding: 20px;
                    z-index: 10001;
                    display: none;
                    flex-direction: column;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                }

                #areaTexto {
                    flex: 1;
                    border: 1px solid #ccc;
                    border-radius: 10px;
                    padding: 15px;
                    font-size: 16px;
                    resize: none;
                    margin-bottom: 15px;
                }

                #botaoEnviar {
                    background: #0096FF;
                    color: white;
                    border: none;
                    padding: 15px;
                    border-radius: 10px;
                    font-size: 18px;
                    cursor: pointer;
                }

                #botaoFechar {
                    position: absolute;
                    top: 10px;
                    right: 15px;
                    background: none;
                    border: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #666;
                }

                .teclado-ativo {
                    background-color: rgba(0, 255, 0, 0.3) !important;
                    border: 2px solid #00FF00 !important;
                }
            </style>
        `;

        if (!document.getElementById('tecladoNativoStyles')) {
            const styleElement = document.createElement('div');
            styleElement.id = 'tecladoNativoStyles';
            styleElement.innerHTML = styles;
            document.head.appendChild(styleElement);
        }
    }

    // üéÆ CONFIGURAR EVENTOS
    configurarEventos() {
        const tecladoTrigger = document.getElementById('tecladoTrigger');
        const caixaTexto = document.getElementById('caixaTexto');
        const areaTexto = document.getElementById('areaTexto');
        const botaoEnviar = document.getElementById('botaoEnviar');
        const botaoFechar = document.getElementById('botaoFechar');

        // Posicionar bot√£o sobre o microfone
        this.posicionarBotaoTeclado();

        // Evento: Abrir teclado
        tecladoTrigger.addEventListener('click', () => {
            console.log(`üéπ ${this.tipo} - Abrindo teclado nativo...`);
            tecladoTrigger.classList.add('teclado-ativo');
            caixaTexto.style.display = 'flex';
            areaTexto.focus();
            
            setTimeout(() => {
                tecladoTrigger.classList.remove('teclado-ativo');
            }, 1000);
        });

        // Evento: Fechar caixa
        botaoFechar.addEventListener('click', () => {
            caixaTexto.style.display = 'none';
            areaTexto.value = '';
        });

        // Evento: Enviar texto
        botaoEnviar.addEventListener('click', () => {
            this.enviarTexto(areaTexto.value.trim());
            caixaTexto.style.display = 'none';
            areaTexto.value = '';
        });

        // Evento: Enviar com Enter
        areaTexto.addEventListener('keydown', (event) => {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                botaoEnviar.click();
            }
        });

        // Reposicionar quando a janela for redimensionada
        window.addEventListener('resize', () => this.posicionarBotaoTeclado());
    }

    // üìç POSICIONAR BOT√ÉO SOBRE O MICROFONE
    posicionarBotaoTeclado() {
        const recordButton = document.getElementById('recordButton');
        const tecladoTrigger = document.getElementById('tecladoTrigger');
        
        if (recordButton && tecladoTrigger) {
            const rect = recordButton.getBoundingClientRect();
            
            tecladoTrigger.style.position = 'fixed';
            tecladoTrigger.style.left = rect.left + 'px';
            tecladoTrigger.style.top = rect.top + 'px';
            tecladoTrigger.style.width = rect.width + 'px';
            tecladoTrigger.style.height = rect.height + 'px';
        }
    }

    // üöÄ ENVIAR TEXTO PARA TRADU√á√ÉO
    async enviarTexto(texto) {
        if (!texto) return;
        
        console.log(`üìù ${this.tipo} - Texto do teclado:`, texto);
        
        try {
            if (window.rtcCore && window.rtcCore.dataChannel && 
                window.rtcCore.dataChannel.readyState === 'open') {
                
                // Traduzir texto
                const response = await fetch('https://chat-tradutor-7umw.onrender.com/translate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        text: texto,
                        targetLang: window.meuIdiomaRemoto || 'en'
                    })
                });

                const result = await response.json();
                const translatedText = result.translatedText || texto;
                
                console.log(`üåê ${this.tipo} - Texto traduzido:`, translatedText);
                
                // Enviar via WebRTC
                window.rtcCore.dataChannel.send(translatedText);
                console.log(`‚úÖ ${this.tipo} - Texto enviado via WebRTC`);
                
            } else {
                console.log(`‚ùå ${this.tipo} - WebRTC n√£o est√° pronto. Tentando novamente...`);
                setTimeout(() => this.enviarTexto(texto), 500);
            }
        } catch (error) {
            console.error(`‚ùå ${this.tipo} - Erro ao processar texto:`, error);
        }
    }

    // üîß INICIALIZAR TECLADO NATIVO
    static inicializar(tipo = 'receiver') {
        const teclado = new TecladoNativo(tipo);
        
        // Esperar o DOM carregar
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
                teclado.configurar();
            });
        } else {
            teclado.configurar();
        }
        
        return teclado;
    }
}

// üî• EXPORTAR PARA USO GLOBAL
window.TecladoNativo = TecladoNativo;
